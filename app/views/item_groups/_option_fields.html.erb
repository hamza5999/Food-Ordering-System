<div class="nested-fields">
  <div class="form-group row">
    <%= f.label :name, "Option name", class: "col col-form-label" %>

    <div class="col-sm-10">
      <%= f.text_field :name, placeholder: "Enter option name", class: "form-control border-secondary" %>
    </div>

    <%= f.label :availability, class: "col col-form-label mt-2" %>

    <div class="col-sm-10 mt-2 d-flex flex-row">
      <%= f.check_box :availability, checked: f.object.availability, class: "tgl tgl-light tgl-info" %>
      <%= f.label :availability, class: 'tgl-btn' do %>
      <% end %>

      <div class="col-sm-2">
        <%= link_to_remove_association "Delete", f, class: "btn-sm btn-danger text-white" %>
      </div>
    </div>
    <%= f.hidden_field :restaurant_id, value: current_employee.restaurant_id %>
  </div>
</div>
