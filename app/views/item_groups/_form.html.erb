<%= form_for item_group do |f| %>
  <div class="tab-content" id="pills-tabContent-1">
    <div class="tab-pane fade show active" id="pills-1" role="tabpanel" aria-labelledby="pills-1">
      <div class="card">
        <h5 class="card-header text-capitalize"><%= controller.action_name + " Category" %></h5>

        <div class="card-body">
          <div class="form-group">
            <%= f.label :name, "Category name" %>
            <%= f.text_field :name, :placeholder => "Enter category name", :class => "form-control" %>
          </div>

          <div class="form-group row">
            <%= f.label :availability, class: "col-sm-4 col-form-label col-form-label-sm" %>

            <div class="col-sm-8">
              <%= f.check_box :availability, checked: f.object.availability, class: "tgl tgl-light tgl-info", id:"cb2"%>
              <label class="tgl-btn" for="cb2"></label>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="tab-pane fade" id="pills-2" role="tabpanel" aria-labelledby="pills-2">
      <div class="card">
        <h5 class="card-header text-capitalize"><%= controller.action_name + " Options" %></h5>

        <div class="card-body">
          <div class="form-group" id="options">
            <%= f.fields_for :options do |nf| %>
              <%= render  "option_fields", f: nf %>
            <% end %>

            <div class="card-footer bg-light link">
              <%= link_to_add_association "New option", f, :options, class: "btn btn-success text-white" %>
              <%= f.button "Submit", type: "submit", :class=> "btn btn-dark" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
