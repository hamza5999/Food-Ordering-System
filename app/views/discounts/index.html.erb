<div class="container mt-5">
  <div class="d-flex">
    <h1 class="mt-5 mx-4">Available Discounts</h1>
    <div class="ml-auto mt-3 mr-4">
      <%= link_to "All", nil, class: "btn btn-success text-white" %>
      <%= link_to "Expired", nil, class: "btn btn-dark text-white" %>
    </div>
  </div>

  <div class="card-body">
    <table class="table table-hover table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">Sr #</th>
          <th scope="col">Name</th>
          <th scope="col">Type</th>
          <th scope="col">Discount</th>
          <th scope="col">Status</th>
          <th scope="col">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @discounts.each_with_index do |discount, index| %>
          <tr>
            <td scope="row"><%= index + 1 %></td>
            <td class="text-capitalize"><%= discount.name %></td>
            <td class="text-capitalize"><%= discount.kind %></td>
            <td class="text-capitalize"><%= discount.value %></td>

            <td class="text-capitalize">
              <% if discount.status %>
                active
              <% else %>
                expired
              <% end %>
            </td>

            <td class="actionfield-width">
              <%= link_to "Show", discount_path(discount), class: "badge badge-primary text-white" %>
              <%= link_to "Edit", nil, class: "badge badge-warning text-white" %>
              <%= link_to "Delete", discount_path(discount), method: :delete, data: {confirm: "Are you sure !! You want to delete this discount?"}, class: "badge badge-danger text-white" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
