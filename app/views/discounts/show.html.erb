<div class="container mt-5">
  <h1 class="mt-4 mx-3">View Discount</h1>

  <div class="card mt-4 col-sm-9">
    <div class="card-header d-flex text-capitalize">
      <h3>
        <%= @discount.name %>
      </h3>

      <div class="ml-auto">
        <%= link_to "Edit", edit_discount_path(@discount), class: "badge badge-warning text-white" %>
        <%= link_to "Delete", discount_path(@discount), method: :delete, data: {confirm: "Are you sure !! You want to delete this discount?"}, class: "badge badge-danger text-white" %>
      </div>
    </div>

    <div class="card-body">
      <div class="d-flex flex-column">
        <div class="d-flex flex-row">
          <h5 class="font-weight-bold">Name:</h5>

          <h5 class="ml-2">
            <%= @discount.name %>
          </h5>
        </div>

        <div class="d-flex flex-row">
          <h5 class="font-weight-bold">Type:</h5>

          <h5 class="ml-2 text-capitalize">
            <%= @discount.kind %>
          </h5>
        </div>

        <div class="d-flex flex-row">
          <h5 class="font-weight-bold">Discount:</h5>

          <h5 class="ml-2 text-capitalize">
            <%= @discount.value %>
          </h5>
        </div>

        <div class="d-flex flex-row">
          <h5 class="font-weight-bold">Status:</h5>

          <h5 class="ml-2 text-capitalize">
            <% if @discount.status %>
              active
            <% else %>
              expired
            <% end %>
          </h5>
        </div>
      </div>
    </div>
  </div>
</div>
